<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.javerage.cmee.Highscores$PlaceholderFragment">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="2"
    android:layout_centerHorizontal="true">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="2">



            <Button
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:id="@+id/buttonDaily"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.03"
                android:onClick="GoDaily"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:id="@+id/buttonWeekly"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.03"
                android:onClick="GoWeekly"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:text="All time"
                android:id="@+id/buttonAllTime"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.03"
                android:onClick="GoAll"
                android:layout_margin="5dp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
    </RelativeLayout>