<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainMenu$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="2"
        android:layout_centerHorizontal="true">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="2">



        <Button
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/buttonPlay"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:onClick="GoPlay"/>

        <Button
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/buttonSettings"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:onClick="GoSettings"/>

        <Button
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:text="@string/LoginButtonText"
            android:id="@+id/buttonLogin"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:onClick="GoLogin"/>

        <Button
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:text="@string/HighscoreButtonText"
            android:id="@+id/buttonHighscores"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:onClick="GoHighscores"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="t"
            android:id="@+id/loggedIn"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="t"
            android:id="@+id/Score"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:visibility="invisible" />

    </LinearLayout>
    </ScrollView>
    </LinearLayout>
</RelativeLayout>
