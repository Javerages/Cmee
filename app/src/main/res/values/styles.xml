<resources>
    <color name="white">#FFFFFF</color>
    <color name="yellow">#FFBB33</color>
    <color name="yellowDim">#ffffc14d</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/YellowButton</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_yellowbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Yellowbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Yellowbar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Yellowbar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Yellowbar</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Yellowbar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_yellowbar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_yellowbar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Yellowbar</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Yellowbar.Widget</item>
    </style>



    <style name="YellowButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/yellowbtnshape</item>
    </style>



    <style name="ActionBar.Solid.Yellowbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_yellowbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_yellowbar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_yellowbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Yellowbar</item>
        <item name="android:icon">@drawable/ic_action_name</item>
    </style>

    <style name="ActionBar.Transparent.Yellowbar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_yellowbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Yellowbar</item>
    </style>

    <style name="PopupMenu.Yellowbar" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_yellowbar</item>
    </style>

    <style name="DropDownListView.Yellowbar" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_yellowbar</item>
    </style>

    <style name="ActionBarTabStyle.Yellowbar" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_yellowbar</item>
    </style>

    <style name="DropDownNav.Yellowbar" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_yellowbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_yellowbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_yellowbar</item>
    </style>

    <style name="ProgressBar.Yellowbar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_yellowbar</item>
    </style>

    <style name="ActionButton.CloseMode.Yellowbar" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_yellowbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Yellowbar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Yellowbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Yellowbar</item>
    </style>



</resources>
