<resources>
    <color name="white">#FFFFFF</color>
    <color name="yellow">#FFBB33</color>
    <color name="yellowDim">#ffffc14d</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="buttonStyle">@style/YellowButton</item>
        <item name="actionBarItemBackground">@drawable/selectable_background_yellowbar</item>
         <item name="dropDownListViewStyle">@style/DropDownListView.Yellowbar</item>
         <item name="actionBarTabStyle">@style/ActionBarTabStyle.Yellowbar</item>
         <item name="actionDropDownStyle">@style/DropDownNav.Yellowbar</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Yellowbar</item>
        <item name="actionModeBackground">@drawable/cab_background_top_yellowbar</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_yellowbar</item>
         <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Yellowbar</item>

         <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Yellowbar.Widget</item>
    </style>



    <style name="YellowButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="background">@drawable/yellowbtnshape</item>
    </style>

</resources>
